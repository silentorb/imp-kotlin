<idea-plugin>
    <id>silentorb.imp.intellij</id>
    <name>Imp</name>
    <vendor email="service@silentorb.com" url="http://www.silentorb.com">Silent Orb</vendor>

    <description><![CDATA[
    Code editor support for the Imp programming language
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Imp file" implementationClass="silentorb.imp.intellij.ImpFileType" fieldName="INSTANCE"
                  language="Imp" extensions="imp"/>
        <lang.parserDefinition language="Imp" implementationClass="silentorb.imp.intellij.language.ImpParserDefinition"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>
